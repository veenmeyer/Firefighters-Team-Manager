<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_FIREFIGHTERS_FORM_LBL_TERMIN_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="name" type="text"
                
            label="COM_FIREFIGHTERS_FORM_LBL_TERMIN_NAME"
            description="COM_FIREFIGHTERS_FORM_DESC_TERMIN_NAME" 
                
                
                 required="true" 
            class="ftm_events_name"
            filter="safehtml"
            size="200"
            maxlength="500" /> 

       <field name="bild" type="media"
                
            label="COM_FIREFIGHTERS_FORM_LBL_TERMIN_BILD"
            description="COM_FIREFIGHTERS_FORM_DESC_TERMIN_BILD" 
                
                
                
            directory="images" /> 

       <field name="email" type="radio" buttons="true"
                                                class="btn-group btn-group-yesno" default="1"
        
        
            label="COM_FIREFIGHTERS_FORM_LBL_TERMIN_EMAIL"
            description="COM_FIREFIGHTERS_FORM_DESC_TERMIN_EMAIL" ><option value="1">COM_FIREFIGHTERS_TERMINE_EMAIL_OPTION_ON</option><option value="0">COM_FIREFIGHTERS_TERMINE_EMAIL_OPTION_OFF</option></field> 

 <field name="abteilungen" type="foreignkey" class="inputbox"
            label="COM_FIREFIGHTERS_FORM_LBL_TERMIN_ABTEILUNGEN"
            description="COM_FIREFIGHTERS_FORM_DESC_TERMIN_ABTEILUNGEN" input_type="list" table="#__firefighters_abteilungen" key_field="id" value_field="name"  multiple="multiple"/> 

       <field name="filter_abteilungen" type="sql" class="inputbox"
            onchange="this.form.submit();"
            query="SELECT 0 AS `id`, '- Please select Abteilungen -' AS `val` UNION SELECT `id`, `name` AS val FROM `#__firefighters_abteilungen`" key_field="id" value_field="val"
             /> 

       <field 	name="beschreibung" 
				type="editor"
				label="COM_FIREFIGHTERS_FORM_LBL_TERMIN_BESCHREIBUNG"
				description="COM_FIREFIGHTERS_FORM_DESC_TERMIN_BESCHREIBUNG" 
				menu_published="0"
				filter="raw"
				option_on="Yes"
				option_off="Yes" /> 

       <field 	name="datum_start" 
				type="calendar" 
				class="inputbox"
				required="true" 
				label="COM_FIREFIGHTERS_FORM_LBL_TERMIN_DATUM_START"
				description="COM_FIREFIGHTERS_FORM_DESC_TERMIN_DATUM_START" 
				format="%Y-%m-%d %H:%M:%S"
				filter="safehtml" /> 

       <field 	name="datum_ende" 
				type="calendar" 
				class="inputbox"
				label="COM_FIREFIGHTERS_FORM_LBL_TERMIN_DATUM_ENDE"
				description="COM_FIREFIGHTERS_FORM_DESC_TERMIN_DATUM_ENDE" 
				format="%Y-%m-%d %H:%M:%S"
				filter="safehtml" /> 

       <field 	name="email_gesendet" 
				type="text" 
				size="40" 
				class="inputbox"
				label="COM_FIREFIGHTERS_FORM_LBL_TERMIN_EMAIL_GESENDET"
				description="COM_FIREFIGHTERS_FORM_DESC_TERMIN_EMAIL_GESENDET" 
                filter="safehtml" /> 

       <field 	name="created_by" 
				type="createdby" 
				default="" 
				label="COM_FIREFIGHTERS_FORM_LBL_TERMIN_CREATED_BY"
				description="COM_FIREFIGHTERS_FORM_DESC_TERMIN_CREATED_BY"  /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
        <option value="2">JARCHIVED</option>
        <option value="-2">JTRASHED</option>
    </field> 

 </fieldset> 

 <fieldset 
                        name="accesscontrol">
                       <field name="asset_id" type="hidden" filter="unset" />
                       <field name="rules"
                            type="rules"
                            label="JFIELD_RULES_LABEL"
                            translate_label="false"
                            filter="rules"
                            validate="rules"
                            class="inputbox"
                            component="com_firefighters"
                            section="termin"
                        />

	</fieldset>

</form>
