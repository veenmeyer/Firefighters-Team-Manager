<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset label="Mitlgieder" name="ftm_anzeige">
	
<field name="note_show" 
		type="note" 
		label="Allgemeine Anzeige Einstellungen :" 
		class="alert alert-info" 
		description="Hier können Sie entscheiden, welche Daten im Frontend angezeigt werden sollen."
		/>
	
	  		<field
				name="show_passbild"
				type="radio"
				class="btn-group"
				default="1"
				label="Passbilder :"
				description="" >
					<option
						value="0">Nein</option>
					<option
						value="1">Ja</option>
	  		</field>
			
	  		<field
				name="show_dienstgrad_image"
				type="radio"
				class="btn-group"
				default="1"
				label="Dienstgradabzeichen :"
				description="" >
					<option
						value="0">Nein</option>
					<option
						value="1">Ja</option>
	  		</field>
			
	  		<field
				name="show_eintrittsdatum"
				type="radio"
				class="btn-group"
				default="1"
				label="Eintrittsdatum :"
				description="" >
					<option
						value="0">Nein</option>
					<option
						value="1">Ja</option>
	  		</field>

	  		<field
				name="show_alter"
				type="radio"
				class="btn-group"
				default="1"
				label="Alter :"
				description="" >
					<option
						value="0">Nein</option>
					<option
						value="1">Ja</option>
	  		</field>

			</fieldset>
		
    <fieldset label="Termine" name="termine_anzeige">
	
<field name="note_termine" 
		type="note" 
		label="Allgemeine Anzeige der Termine :" 
		class="alert alert-info" 
		description="Hier können Sie entscheiden, welche Daten im Frontend angezeigt werden sollen."
		/>
	
	  		<field
				name="show_link_termin"
				type="radio"
				class="btn-group"
				default="1"
				label="Link auf Termin :"
				description="" >
					<option
						value="0">Nein</option>
					<option
						value="1">Ja</option>
	  		</field>

	  		<field
				name="show_termine_image"
				type="radio"
				class="btn-group"
				default="1"
				label="Termine Bild :"
				description="" >
					<option
						value="0">Ausblenden</option>
					<option
						value="1">Anzeigen</option>
	  		</field>
	
	  		<field
				name="show_termine_ende"
				type="radio"
				class="btn-group"
				default="1"
				label="Termin Ende :"
				description="" >
					<option
						value="0">Ausblenden</option>
					<option
						value="1">Anzeigen</option>
	  		</field>

			</fieldset>
		
<fieldset name="custom_css" label="Custom CSS" description="">
	
	<field name="note555" 
		type="note" 
		class="alert alert-info" 
		label="Zusätzlicher CSS-Code" 
		description="Hier können Sie noch zusätzlichen CSS-Code eingefügen, der dann in den entsprechenden Ansichten automatisch mitgeladen wird." 
	/>
		

		<field 	name="mitglieder_css" 
				type="textarea" 
				filter="raw" 
				default=".ftm_passbild {max-width:150px !important;}" 
				label="Mitglieder-Übersicht" 
				description="Füge hier den zusätzlichen CSS-Code für die Einsatz-Übersicht ein." 
				rows="10" 
				cols="40" />
		
		<field 	name="termine_css" 
				type="textarea" 
				filter="raw" 
				default=".ftm_termine_image {max-width:150px !important;}" 
				label="Termine-Übersicht" 
				description="Füge hier den zusätzlichen CSS-Code für die Termine-Übersicht ein." 
				rows="10" 
				cols="40" />
				
	</fieldset>
			
			
    <fieldset 
        name="permissions"
	description="Berechtigungen"
	label="Berechtigungen">

		<field 
                    name="rules" type="rules" component="com_firefighters"
                    class="inputbox" filter="rules" validate="rules"
                    label="Berechtigungen"
                    section="component" />
	</fieldset>
	
	<fieldset name="information" label="Info"
		addfieldpath="/administrator/components/com_firefighters/models/fields"
	>
		<field 
			name="infobox"
			type="info"
			label=""
			/>
		<field
			name="validation_key"
			type="text"
			label="Validation-Key"
			hint="Enter Key here"
			description="Validation-Key"
		 />
		 <field name="ftm" type="hidden" default="0" />
	</fieldset> 
	
</config>
