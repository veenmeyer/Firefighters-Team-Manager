<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_FIREFIGHTERS_FORM_LBL_AUSBILDUNG_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="name" type="text"
                
            label="COM_FIREFIGHTERS_FORM_LBL_AUSBILDUNG_NAME"
            description="COM_FIREFIGHTERS_FORM_DESC_AUSBILDUNG_NAME" 
                
                
                 required="true" 
            class="ftm_trainings_name"
            filter="safehtml"
            size="200"
            maxlength="500" /> 

       <field name="bild" type="media"
                
            label="COM_FIREFIGHTERS_FORM_LBL_AUSBILDUNG_BILD"
            description="COM_FIREFIGHTERS_FORM_DESC_AUSBILDUNG_BILD" 
                
                
                
            menu_published="0"
            filter="raw"
            directory="images"
            option_on="Yes"
            option_off="Yes" /> 

       <field name="beschreibung" type="editor"
                
            label="COM_FIREFIGHTERS_FORM_LBL_AUSBILDUNG_BESCHREIBUNG"
            description="COM_FIREFIGHTERS_FORM_DESC_AUSBILDUNG_BESCHREIBUNG" 
                
                
                
            menu_published="0"
            filter="raw"
            option_on="Yes"
            option_off="Yes" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_FIREFIGHTERS_FORM_LBL_AUSBILDUNG_CREATED_BY"
            description="COM_FIREFIGHTERS_FORM_DESC_AUSBILDUNG_CREATED_BY"  /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
        <option value="2">JARCHIVED</option>
        <option value="-2">JTRASHED</option>
    </field> 

 </fieldset> 

 <fieldset 
                        name="accesscontrol">
                       <field name="asset_id" type="hidden" filter="unset" />
                       <field name="rules"
                            type="rules"
                            label="JFIELD_RULES_LABEL"
                            translate_label="false"
                            filter="rules"
                            validate="rules"
                            class="inputbox"
                            component="com_firefighters"
                            section="ausbildung"
                        />

	</fieldset>

</form>
